                android:text="@string/sensors_update_label" />

            <SeekBar
                android:id="@+id/sensors_update_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
