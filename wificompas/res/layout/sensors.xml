    <TableLayout
        android:id="@+id/sensors_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/sensors_scan_label"
                style="@style/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/sensors_scan_label" />

            <ToggleButton
                android:id="@+id/sensors_scan_toggle"
                android:layout_width="wrap_content"
