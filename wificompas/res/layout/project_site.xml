<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_site_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <at.fhstp.wificompass.view.MultiTouchView
        android:id="@+id/project_site_resultview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/project_site_background"
         
        />

    <LinearLayout
        android:id="@+id/project_site_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal" android:padding="5dp">

        <Button
            android:id="@+id/project_site_start_wifiscan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_site_start_scan" android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/project_site_step_detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_site_start_step_detect" android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" android:layout_marginLeft="20dp" android:layout_marginBottom="20dp">

        <ToggleButton
            android:id="@+id/project_site_toggle_autorotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Auto-rotate"
            android:textOn="Auto-rotate" />

    </LinearLayout>

</RelativeLayout>